{
  "extends": "nx/presets/npm.json",
  "tui": {
    "enabled": false
  },
  "workspaceIgnore": ["previous-architecture", "ai", "pika", "pika-old"],
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "typecheck", "lint", "test"],
        "parallel": 8,
        "globalEnv": {
          "DOTENV_PATH": ".env"
        }
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "local": {
      "cache": false,
      "persistent": true
    }
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  }
}
