# ===========================================
# Backend - Development Environment
# ===========================================
# IMPORTANT: This file contains example values only.
# DO NOT use these values in production!

# Environment variables
NODE_ENV=development
ENV_STAGE=development
LOG_LEVEL=debug
APP_NAME=Pika
APP_VERSION=0.1.0
BASE_URL=http://127.0.0.1:4000
FRONTEND_URL=http://127.0.0.1:3000
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=4000
DEFAULT_TIMEZONE=Europe/Belgium
TIMEZONE=America/Asuncion
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=es,en,gn
DEFAULT_CURRENCY=GBP

# Database configuration
PG_HOST=127.0.0.1
PG_PORT=6436
PG_DATABASE=pika
PG_USER=postgres
PG_PASSWORD=postgres
PG_SSL=false
PG_MAX_CONNECTIONS=20
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=2000
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:6436/pika

# Redis cache configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=7381
REDIS_PASSWORD=
REDIS_PREFIX=pika:
REDIS_DEFAULT_TTL=3600
REDIS_RETRY_DELAY=50
REDIS_MAX_RETRY_DELAY=2000
CACHE_DISABLED=true

# Authentication & security - EXAMPLE VALUES ONLY!
# Generate your own secure keys for production!
SKIP_AUTH=false
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
INTERNAL_API_TOKEN=your-internal-api-token-here
JWT_ISSUER=pika-api
JWT_AUDIENCE=pika-app
PASSWORD_SALT_ROUNDS=10
JWT_ACCESS_EXPIRY=2h
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY=your-rsa-private-key-here-generate-new-one-for-production
JWT_PUBLIC_KEY=your-rsa-public-key-here-generate-new-one-for-production

# Authentication
AUTH_PROVIDER=local
LOCAL_AUTH_URL=http://127.0.0.1:5500/local-env-user

# Cognito configuration (if using AWS Cognito)
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=

# API gateway & security settings
API_GATEWAY_PORT=5500
API_GATEWAY_BASE_URL=http://127.0.0.1:5500
RATE_LIMIT_ENABLE=false
RATE_LIMIT_MAX=40
RATE_LIMIT_WINDOW="1 minute"
RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGIN=*
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_CACHE_TIME=5000
HEALTH_CHECK_MEMORY_THRESHOLD=15

# Service ports (all services)
USER_SERVICE_PORT=5020
AUTH_SERVICE_PORT=5021
BUSINESS_SERVICE_PORT=5022
CATEGORY_SERVICE_PORT=5023
COMMUNICATION_SERVICE_PORT=5024
PAYMENT_SERVICE_PORT=5025
PDF_SERVICE_PORT=5026
STORAGE_SERVICE_PORT=5027
SUBSCRIPTION_SERVICE_PORT=5028
SUPPORT_SERVICE_PORT=5029
VOUCHER_SERVICE_PORT=5030

# Service URLs (internal communication)
USER_SERVICE_URL=http://127.0.0.1:5020
AUTH_SERVICE_URL=http://127.0.0.1:5021
BUSINESS_SERVICE_URL=http://127.0.0.1:5022
CATEGORY_SERVICE_URL=http://127.0.0.1:5023
COMMUNICATION_SERVICE_URL=http://127.0.0.1:5024
PAYMENT_SERVICE_URL=http://127.0.0.1:5025
PDF_SERVICE_URL=http://127.0.0.1:5026
STORAGE_SERVICE_URL=http://127.0.0.1:5027
SUBSCRIPTION_SERVICE_URL=http://127.0.0.1:5028
SUPPORT_SERVICE_URL=http://127.0.0.1:5029
VOUCHER_SERVICE_URL=http://127.0.0.1:5030

# External service configurations - EXAMPLE ONLY
# Add your actual API keys here for local development
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email service (example configuration)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@pika.localhost
SMTP_FROM_NAME=Pika Development

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=your-s3-bucket-name

# Feature flags for development
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_CACHE=true
ENABLE_EMAIL_SENDING=false
ENABLE_SMS_SENDING=false

# Development tools
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_GRAPHQL_PLAYGROUND=true