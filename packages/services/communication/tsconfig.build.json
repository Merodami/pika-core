{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "inlineSources": false,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.it.ts",
    "dist",
    "src/**/test/**/*"
  ]
}
