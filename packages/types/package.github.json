{
  "name": "@merodami/pika-types",
  "version": "1.1.1",
  "description": "Shared TypeScript types for Pika platform",
  "private": false,
  "author": "Damian Meroni",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Merodami/pika-backend.git"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "vitest run",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.8.3",
    "tsc-alias": "^1.8.16",
    "vitest": "^3.2.4"
  }
}
