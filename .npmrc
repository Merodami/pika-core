# GitHub Package Registry Configuration
# To use private packages, set your token as an environment variable:
# export NPM_TOKEN=your-github-token
@Merodami:registry=https://npm.pkg.github.com
//npm.pkg.github.com/:_authToken=${NPM_TOKEN}

# Use exact versions for better reproducibility
save-exact=true

# Ensure everyone uses the same Node version
engine-strict=true

# Don't generate package-lock.json (we use Yarn)
package-lock=false